    module_name = "XPCTests",
    visibility = ["//visibility:public"],
    deps = [
        "//Sources/Testing",
        "//Sources/UmbraCryptoService",
        "//Sources/UmbraXPC",
        "//Sources/XPC/Core:XPCCore",
