load("//:swift_rules.bzl", "umbra_swift_library")

umbra_swift_library(
    name = "UmbraErrorsUtilities",
    srcs = glob(["**/*.swift"], allow_empty = True),
    visibility = ["//Sources/UmbraErrors:__subpackages__"],  # Allow access from the UmbraErrors package
    deps = [
        "//Sources/UmbraErrors/Core:UmbraErrorsCore",
        "//Sources/UmbraErrors/Domains:UmbraErrorsDomains",
        "//Sources/UmbraErrors/Mapping:UmbraErrorsMapping",
    ],
)

