load("@build_bazel_rules_swift//swift:swift.bzl", "swift_library")

swift_library(
    name = "ErrorHandlingNotification",
    srcs = glob(
        ["*.swift"]
,
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
    deps = [
        "//Sources/ErrorHandlingInterfaces",
        "//Sources/ErrorHandling/Core:ErrorHandlingCore",
        "//Sources/LoggingWrapper",  # Use LoggingWrapper instead of UmbraLogging
        "//Sources/LoggingWrapperInterfaces",
    ],
)

