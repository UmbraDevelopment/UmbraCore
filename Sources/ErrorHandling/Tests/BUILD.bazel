load("//bazel:swift_rules.bzl", "umbra_swift_test")

umbra_swift_test(
    name = "Tests",
    srcs = glob(
        [
            "*.swift",
            "**/*.swift",
        ],
        allow_empty = False,
        exclude = [
            "**/Tests/**",
            "**/*Test.swift",
            "**/*.generated.swift",
        ],
        exclude_directories = 1,
    ),
    deps = [
        # Core dependencies
        "//Sources/UmbraErrors/Core:UmbraErrorsCore",
        
        # Error handling module dependencies
        "//Sources/ErrorHandling/Interfaces",
        "//Sources/ErrorHandling/Protocols",
        "//Sources/ErrorHandling/Core",
        "//Sources/ErrorHandling/Recovery",
        "//Sources/ErrorHandling/Notification",
        "//Sources/ErrorHandling/Logging",
        
        # Logging dependency
        "//Sources/UmbraLogging",
    ],
)
