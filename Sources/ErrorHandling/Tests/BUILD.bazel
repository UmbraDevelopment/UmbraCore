load("//bazel:swift_rules.bzl", "umbra_swift_test")

umbra_swift_test(
    name = "Tests",
    srcs = glob(
        [
            "*.swift",
            "**/*.swift",
        ],
        allow_empty = False,
        exclude = [
            "**/Tests/**",
            "**/*Test.swift",
            "**/*.generated.swift",
        ],
        exclude_directories = 1,
    ),
    deps = [
        "//Sources/Core",
        "//Sources/UmbraErrors/Core:UmbraErrorsCore",
    ],
)
