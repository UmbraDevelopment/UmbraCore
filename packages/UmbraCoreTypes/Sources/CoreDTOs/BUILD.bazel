load("//bazel:swift_rules.bzl", "umbra_swift_library")

umbra_swift_library(
    name = "CoreDTOs",
    srcs = glob(
        [
            "*.swift",
            "**/*.swift",
        ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
    deps = [
        # All migrated modules
        "//packages/UmbraCoreTypes/Sources/FileSystemTypes",
        "//packages/UmbraCoreTypes/Sources/SecurityTypes",
        "//packages/UmbraCoreTypes/Sources/UmbraErrors",
        "//packages/UmbraCoreTypes/Sources/UserDefaults",
        "//packages/UmbraCoreTypes/Sources/SecurityInterfaces",
        
        # Modules still to be migrated
        "//packages/UmbraCoreTypes/Sources/Notification",
        "//packages/UmbraCoreTypes/Sources/Scheduling",
        
        # Dependencies to be migrated in future
        "//Sources/UmbraLogging",
    ],
)

# For testing only
umbra_swift_library(
    name = "CoreDTOsTests",
    testonly = True,
    srcs = glob(
        [
            "*.swift",
            "**/*.swift",
        ],
        allow_empty = False,
        exclude = [
            "**/Tests/**",
            "**/*Test.swift",
            "**/*.generated.swift",
        ],
        exclude_directories = 1,
    ),
    visibility = [
        "//packages/UmbraCoreTypes:__subpackages__",
        "//packages/UmbraInterfaces:__subpackages__",
        "//packages/UmbraImplementations:__subpackages__",
    ],
    deps = [
        ":CoreDTOs",
    ],
)
